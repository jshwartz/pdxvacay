  <div class="row">
    <div class="col-md-4">
      <h1>Admin</h1>

      <form {{action "createActivity" on='submit'}}>
        <div class="form-group">
          <label for="titile">Title</label>
          {{input type="text" value=title class="form-control"}}
        </div>
        <button class="btn btn-primary btn-sm">Submit</button>
      </form>

    </div>
    <div class="col-md-4">
      <h1>Things to Do</h1>
      <ul>
        {{#each model as |activity|}}
          <li>{{activity.title}}</li>
        {{/each}}
      </ul>
      {{outlet}}
    </div>
  </div>
