<h1>edit <b>{{model.title}}</b></h1>

<form {{action "createActivity" on='submit'}}>
  <div class="row">

    <div class="col-md-4 well">
      <div class="form-group">
        <label for="title">Title</label>
        {{input type="text" value=title class="form-control"}}
      </div>
      <div class="form-group">
        <label for="title">Sub-Title (tile details)</label>
        {{input type="text" value=tileDetails class="form-control"}}
      </div>
      <div class="form-group">
        <label for="catagory">Catagory</label>
        {{ted-select
          selectClassNames="form-control"
          content=catagories
          optionValueKey="id"
          optionLabelKey="title"
          onchange=(action "updateCatagory")
          prompt="Choose a catagory"
        }}
      </div>
      <div class="form-group">
        <label for="rating">Rating</label>
        {{ted-select
          selectClassNames="form-control"
          content=ratings
          optionValueKey="id"
          optionLabelKey="rating"
          onchange=(action "updateRating")
          prompt="Choose a rating"
        }}
      </div>
      <div class="form-group">
        <label for="zone">Zone</label>
        {{ted-select
          selectClassNames="form-control"
          content=zones
          optionValueKey="id"
          optionLabelKey="zone"
          onchange=(action "updateZone")
          prompt="Choose a zone"
        }}
      </div>
      <div class="form-group">
        <label for="duration">Duration</label>
        {{ted-select
          selectClassNames="form-control"
          content=durations
          optionValueKey="id"
          optionLabelKey="duration"
          onchange=(action "updateDuration")
          prompt="Choose a duration"
        }}
      </div>

    </div>

    <div class="col-md-4">
      <div class="well">
        <div class="form-group">
          <label for="price">Price</label>
          {{ted-select
            selectClassNames="form-control"
            content=prices
            optionValueKey="id"
            optionLabelKey="price"
            onchange=(action "updatePrice")
            prompt="Choose a Price"
          }}
        </div>
      </div>
      <div class="well">
        <div class="form-group">
          <label for="address1">Street Address</label>
          {{input type="text" value=address1 class="form-control"}}
        </div>
        <div class="form-group">
          <label for="city">City</label>
          {{input type="text" value=city class="form-control"}}
        </div>
        <div class="form-group">
          <label for="state">State</label>
          {{input type="text" value=state class="form-control"}}
        </div>
        <div class="form-group">
          <label for="zip">Zip</label>
          {{input type="number" value=zip class="form-control"}}
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 well">
      <div class="form-group">
        <label for="description">Description</label>
        {{textarea value=description class="form-control" rows="5"}}
      </div>
      <button class="btn btn-primary btn-sm">Submit</button>
    </div>
  </div>
</form>
