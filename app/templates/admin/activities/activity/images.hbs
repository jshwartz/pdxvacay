<ul class="nav nav-tabs">
  <li role="presentation" class=''>{{#link-to 'admin.activities.activity.meta'}}Meta{{/link-to}}</li>
  <li role="presentation" class=''>{{#link-to 'admin.activities.activity.address'}}Address{{/link-to}}</li>
  <li role="presentation" class=''>{{#link-to 'admin.activities.activity.description'}}Description{{/link-to}}</li>
  <li role="presentation" class='active'>{{#link-to 'admin.activities.activity.images'}}Images{{/link-to}}</li>
</ul>
<div class="row"><br>
  {{#if openPicker}}
    {{ember-filepicker options=imageOptions onSelection='fileSelected' onClose='onClose' onError='onError'}}
  {{/if}}
</div>

<div class="row">
  <div class="col-md-10">
    <br>
    {{#each model.userimages as |image|}}
      {{#if image.ready}}
        {{thumb-edit picked=image update="updateImage" delete="deleteImage"}}
      {{/if}}
    {{/each}}

    <div class="col-sm-6 col-md-4">
      <div class="well">
        <p></p>
        <p class="text-center"><button class="btn btn-success" {{action "pickWithFilepicker"}}>Add an Image</button></p>
      </div>
    </div>


  </div>
</div>
